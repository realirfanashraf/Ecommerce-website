<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/user_login_assets/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="/user_login_assets/css/style.css">

    <style>
        /* Add this style to make the input fields transparent */
        .form-input {
            background-color: transparent;
            border: none;
            border-bottom: 2px solid #050404;
            color: #ffc4c4;
        }

        /* Add this style to change the color of the field labels */
        .form-group label {
            color: #ffffff;
        }

        /* Add this style to make the background transparent */
        .signup-content {
            background-color: transparent;
        }
    </style>
</head>

<body>

    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <form action="/otp-confirmation" method="post" class="signup-form">
                        <h2 class="form-title">OTP Confirmation</h2>
                        <div class="form-group">
                            <% if(locals.message){%>
                                <div id="msg" class="alert alert-danger text-center">
                                    <%= message %>
                                </div>
                                <script>
                                    setTimeout(function() {
                                        var messageElement = document.getElementById("msg");
                                        messageElement.parentNode.removeChild(messageElement);
                                    }, 5000); // Remove the message after 5 seconds (adjust the duration as needed)
                                </script>
                            <% } %>        
                            <input type="text" class="form-input" name="otp" id="otp" placeholder="Enter OTP" required />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="form-submit" value="Confirm OTP" />
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="/user_login_assets/vendor/jquery/jquery.min.js"></script>
    <script src="/user_login_assets/js/main.js"></script>
</body>

</html>
