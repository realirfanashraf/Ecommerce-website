<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SpecXpert</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/user_login_assets/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/user_login_assets/css/style.css">

    <style>
        /* Add this style to make the input fields transparent */
        .form-input {
            background-color: transparent;
            border: none;
            border-bottom: 2px solid #050404;
            color: #ffc4c4;
        }

        /* Add this style to change the color of the field labels */
        .form-group label {
            color: #ffffff;
        }
    </style>
</head>
<body>

<div class="main">

    <section class="login">
        <!-- <img src="images/login-bg.jpg" alt=""> -->
        <div class="container">
            <div class="login-content">
                <form action="/send-otp" method="POST" class="login-form">
                    <h2 class="form-title">LOGIN</h2>
                    <div class="form-group">
                        <input type="tel" class="form-input" name="phone" id="phone" placeholder="Mobile"/>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="submit" id="submit" class="form-submit">
                            Get OTP
                        </button>
                    </div>
                </form>
                <% if(locals.message){%>
                    <div id="msg" class="alert alert-danger text-center">
                       <%= message %>
                    </div>
                <% } %>
                <form action="/verify-otp" method="POST" novalidate="novalidate">
                    <div class="form-group">
                        <input type="tel" class="form-input" name="otp" id="otp" placeholder="OTP"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Login"/>
                        <p class="loginhere">
                            login with Email <a href="/login" class="loginhere-link">Login</a>
                            <br>
                            create a new account ? <a href="/signup" class="loginhere-link">signup here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section>

</div>

<!-- JS -->
<script src="/user_login_assets/vendor/jquery/jquery.min.js"></script>
<script src="/user_login_assets/js/main.js"></script>

</body>
</html>
